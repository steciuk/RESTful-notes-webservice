<div class="note-list-item">
    <div>
        <a class="note-title"><%= note.title %></a>
    </div>
    <div>
        <%= note.content %>
    </div>
    <div>
        Created:
        <%= note.created.toISOString().substring(11,19) %>
        <%= note.created.toISOString().substring(0,10) %>
    </div>
    <div>
        Last modified:
        <%= note.modified.toISOString().substring(11,19) %>
        <%= note.modified.toISOString().substring(0,10) %>
    </div>
</div>
<div class="btn-row">
    <a class="btn" href="/notes/<%= note.id %>/edit">Edit</a>
    <form method="POST" action="/notes/<%= note.id %>?_method=DELETE">
        <button class="btn" type="submit">Delete</button>
    </form>
</div>